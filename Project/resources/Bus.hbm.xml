<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.project.bean.BusBean" table="Bus">
		<id name="busNumber" column="BusNumber" type="string">
			<generator class="identity" />
		</id>
		<set name="busNumber" cascade="all">
			<key column="BusNumber" />
			<one-to-many class="com.project.bean.BusBean" />
		</set>
		<property name="details" column="Details" type="string" />
		<property name="cost" column="Cost" type="float" />
	</class>
</hibernate-mapping>
